{
  "AllowedHosts": "*",
  "Liquid": {
    "culture": {
      "defaultCulture": "en-US"
    },
    "httpScopedContext": {
      "keys": [
        {
          "keyName": "Connection",
          "required": true
        },
        {
          "keyName": "Accept",
          "required": true
        }
      ]
    },
    "HttpScopedLogging": {
      "keys": [
        {
          "keyName": "Connection",
          "required": true
        },
        {
          "keyName": "Accept",
          "required": true
        }
      ]
    },
    "databases": {
      "mongo": {
        "DbSettings": [
          {
            "connectionString": "mongodb://mongo:27017",
            "databaseName": "BookstoreDb"
          }
        ]
      }
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Exceptions", "Serilog", "Serilog.Sinks.Console", "Serilog.Sinks.Debug" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "System": "Information",
        "Microsoft": "Information",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "restrictedToMinimumLevel": "Information"
              }
            }
          ]
        }
      },
      {
        "Name": "Debug"
      }
    ],
    "Enrich": [ "FromLogContext", "WithExceptionDetails" ],
    "Properties": {
      "Environment": "LocalDev"
    }
  }
}
